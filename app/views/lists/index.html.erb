<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2250&q=80);">
  <div class="container">
    <h1> The WatchList.com</h1>
    <p>Your watchlist, everywhere.</p>
    <%= link_to 'Create a new list', new_list_path, class: "btn btn-success" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @lists.each do |list|%>
      <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
